{
    "name": "schl-api",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start --port 3000",
        "dev": "cross-env NODE_ENV=development nest start --watch --port 3000",
        "debug": "nest start --debug --watch --port 3000",
        "prod": "node dist/main --port 3000",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.1",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.0.1",
        "@nestjs/mongoose": "^11.0.3",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.0.1",
        "@repo/common": "workspace:*",
        "@zerobounce/zero-bounce-sdk": "^1.1.2",
        "axios": "^1.13.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "fast-xml-parser": "^5.3.2",
        "jsonwebtoken": "^9.0.2",
        "moment-timezone": "^0.6.0",
        "mongoose": "^8.18.2",
        "multer": "^2.0.2",
        "passport-jwt": "^4.0.1",
        "promise-ftp": "^1.3.5",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/express": "^5.0.0",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/multer": "^2.0.0",
        "@types/node": "^22.15.30",
        "@types/promise-ftp": "^1.3.8",
        "@types/supertest": "^6.0.3",
        "cross-env": "^10.1.0",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.2",
        "globals": "^16.0.0",
        "jest": "^30.0.0",
        "prettier": "^3.4.2",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
