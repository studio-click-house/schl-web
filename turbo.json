{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",

  "globalEnv": [
    "VERCEL_ENV",
    "NODE_ENV",
    "MONGODB_URI",
    "BASE_URL",
    "DB_NAME",
    "PORTAL_URL",
    "CRM_URL",
    "AUTH_SECRET",
    "PORTAL_AUTH_SECRET",
    "CRM_AUTH_SECRET",
    "ZERO_BOUNCE_API_KEY",
    "FTP_HOST",
    "FTP_USERNAME",
    "FTP_PASSWORD",
    "AUTH_URL",
    "ALLOWED_IPS",
    "NEXT_PUBLIC_BASE_URL",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_APP_NAME",
    "PORT"
  ],

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "cache": true
    },

    "lint": {
      "cache": true
    },

    "check-types": {
      "cache": true
    },

    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
